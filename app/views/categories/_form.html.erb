<%= semantic_form_for @category do |f| %>
  <%= f.error_messages %>
  <%= f.inputs do %>  
    <%= f.input :name %>
    <%= f.input :description %>
    <%= @category.ancestry %>
    <br />
    <%= @category.mum %>
    <%= f.input :mum, :as => :radio, :collection => Category.all %>

    <%= f.buttons %>
  <% end %>
<% end %>
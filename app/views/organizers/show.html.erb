<% title @organizer.name %>


<% content_for :head do %>  
  <%= auto_discovery_link_tag( :rss, organizer_url(:format => 'rss') , {:title => @organizer.name + t('app.s') + ' ' + t('.organizers_event') + ' ' + t('app.at') + ' ' +  t('app.site_name')}) %>
<% end %> 

  
  
<p>
  <strong><%=t '.description' =%>:</strong>
  <%= simple_format @organizer.description %>
</p>
<p>
  <strong><%=t '.website' =%>:</strong>
  <%= link_to @organizer.website, @organizer.website %>
</p>

<p>
  <strong><%= t '.upcoming' %>:</strong>
</p>

<table>
  <% for event in @organizer.upcoming_events %>  
    <tr>
      <td> <%= event.start_date %> </td>
      <td><strong><%= link_to event.subject, event %></strong></td> 
      <td> <%= event.intro %> </td> 
      <td> <%= event.start_time %> </td>
      <td> <%= link_to event.municipality_short, event.municipality %>
        <abbr title="<%= event.municipality.number_of_upcoming_events %> <%= t '.no_of_events_per_municipality' %>">
            (<%= event.municipality.number_of_upcoming_events %>)
        </abbr>
      </td> 
    </tr>
  <% end %>   
</table>



<% if current_user %>
  <% if current_user.authorized? @organizer %>
  <p>
    <strong><%= t '.members' %>:</strong>
  </p>
  <ol class = "user_list">
    <% for user in @organizer.users %>
      <li><div class = "user">
      <%= link_to user.name , user %></div>
      <% unless user == current_user %>
        <%= button_to I18n.t('organizers.show.unmember') , membership_path(Membership.find(:first, :conditions => ["organizer_id = ? and user_id = ?", @organizer.id, user.id])), :confirm => I18n.t('organizers.show.sure_unmember') + user.name, :method => :delete %> 
      <% end %>
      </li>
    <% end %> 
  </ol>

<hr />

<p>
  <strong><%= t '.all_registered_users' %>:</strong>
</p>

<ol class = "user_list">
<% @users = User.all %>
  <% for user in @users %>
    <li><div class = "user">
      <%= link_to user.name , user %> </div>
      <%= button_to I18n.t('organizers.show.make_member') , memberships_path(:user_id => user.id, :organizer_id => @organizer) %>
    </li>  
  <% end %>
</ol>

<% end %>
<% end %>

<hr />

   
<p>
<%= link_to t('.subscribe_rss') + ' ' + @organizer.name + t('app.s') + ' ' + t('.organizers_event'), :format => :rss, :only_path => false %>  
<%= link_to image_tag("rss_icon.gif", :alt => t('.rss_alt') + ' ' + @organizer.name), :format => :rss, :only_path => false %>
</p>


<p>
<%= t('.share_as_iframe') %><br />
<code><%= h '<iframe src="' + organizer_url(:format => :ihtml) + '"  frameborder="1" ></iframe>' %></code>
</p>
<p>&nbsp;</p>
<% if current_user %>
  <% if current_user.authorized? @organizer %>
  
<p>
  <%= link_to t('app.edit') + " "+ @organizer.name + t('app.s') + ' ' + t('app.page'), edit_organizer_path(@organizer) %> 

  <% if current_user.try :is_admin %>
  | <%= link_to t('app.destroy') + " "+ @organizer.name, @organizer, :confirm => t('app.are_you_sure') + ' ' +@organizer.name + '?', :method => :delete %> 
  <% end %>
</p>

<%end%>
<%end%>

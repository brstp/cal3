<% set_meta_tags :title => t('.title'),
                   :description => t('.meta_description') %>

<% content_for :right_column_top do %>  
  <%= my_organizers current_user %>
<% end %>   

<h1>Alla arrangörer i Föreningskalendern. </h1>
<p>
Om du inte registrerat ett användarkonto, gör det och logga in för att skapa dina egna evenemangsannonser.                   
</p>

<table class = "general">
  <caption>Inplanerade evenemang för alla arrangörer</caption>
  <thead>
    <tr>
      <th>Arrangör</th>
      <th class = "number_column">Planerade<br />evenemang</th>
      <th>Nästa evenemang</th>
      <% if current_user %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% reset_cycle %>
  <% for organizer in @organizers %>
    <tr class = "<%= cycle("even", "odd") %>">
      <td><%= link_to organizer.name, organizer %></td>
      <td class = number_column><%= organizer.number_of_upcoming_events %></td>
      <td>
        <% unless organizer.next_event.nil?%>
      <%= link_to(l(organizer.next_event.start_datetime, :format => :shorty) + ', ' +organizer.next_event.subject + ' (' + organizer.next_event.municipality.short_name + ')', organizer.next_event, :title => organizer.next_event.try(:intro)) %>
      <% end %>
      </td>
      <% if current_user %>
        <td><%# link_to organizer.relation_with(current_user), organizer %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<% if current_user %>
  <p><%= link_to t('.new'), new_organizer_path %></p>
<% end %>

<% title t('.title') %>

<% content_for :head do %>  
  <%= auto_discovery_link_tag( :rss, events_url(:format => 'rss') , {:title => t('.rss_title') }) %>
<% end %> 

    <table class="calendar">
      <caption>Kalender för månad - år </caption>
      <thead>
        <tr>
          <th class="day_box">Dag</th>
          <th class="month_box">Vad händer?</th>
        </tr>
      </thead>
    <% for event in @events %>
      <tr>
        <th class="day_box">
          <span class="day_of_month">
            <span class="<%= l(event.start_datetime, :format => :day_of_week) %>">
              <abbr class="day" title="<%= l(event.start_datetime, :format => :date) %>">
                <%= l(event.start_datetime, :format => :day_of_month) %>
              </abbr>
            </span>
          </span>
          <br />
          <span class="day_of_week">
            <%= l(event.start_datetime, :format => :day_of_week) %>
          </span>
        </th>
        <td>
          <ol class="events_with_time">
            <li class="event"><%= link_to raw("<strong>" + event.subject + '</strong> ' + content_tag(:abbr,  l(event.start_datetime, :format => :clock), :title => "#{l(event.start_datetime, :format => :machine)}") + ', ' + event.municipality_short) , event, :title => t('app.organizer') + ": " + event.organizer.name + ". " + t('app.summary') +": " + event.intro %></li>
          </ol>
          <ul class="events_without_time">
            <li class="event">Fullmåne</li> 
          </ul>
        </td>
      </tr>
     <% end %>
    </table>
    

<table>
  <% for event in @events %>
    <tr>
      <td><%= event.start_date %></td>
      <td><strong><%= link_to event.subject, event %></strong></td>
      <td><%= event.intro %></td>
      <td><%= event.start_time %></td>
      <td><%= link_to event.municipality_short, event.municipality %><abbr title="<%= event.municipality.number_of_upcoming_events %><%= t '.no_of_events_per_municipality' %>">(<%= event.municipality.number_of_upcoming_events %>)
        </abbr></td>
      <td><%= link_to event.organizer.name, event.organizer %><abbr title="<%= event.organizer.number_of_upcoming_events %><%= t '.no_of_events_per_organizer' %>">
            (<%= event.organizer.number_of_upcoming_events %>)
        </abbr>
      </td>
   </tr>
  <% end %>
</table>

<p>
<%= link_to t('.subscribe_rss'), :format => :rss, :only_path => false %>  
<%= link_to image_tag("rss_icon.gif", :alt => t('.rss_alt')), :format => :rss, :only_path => false %>
</p>



<% if current_user%>
  <p><%= link_to t('.new_organizer'), new_organizer_path %>
  <% unless current_user.organizers.empty? and !current_user.is_admin? %>
    <p><%= link_to t('.new'), new_event_path %></p>
  <% end %>

<% end %>

<% title (@event.subject + " | " + @event.organizer.name) %>

<p>
  <%= t('app.arranged_by') %>: <%= link_to @event.organizer.name, @event.organizer %> <abbr title="<%= @event.organizer.number_of_upcoming_events %><%= t '.no_of_events_per_organizer' %>">
            (<%= @event.organizer.number_of_upcoming_events %>)
        </abbr> <%= t('app.in_municipality') %> <%= link_to @event.municipality.name, @event.municipality %>
  <abbr title="<%= @event.municipality.number_of_upcoming_events %>&nbsp;<%= t '.no_of_events_per_municipality' %>">
            (<%= @event.municipality.number_of_upcoming_events %>)
        </abbr>
</p>

<h1>
  <%= @event.subject %>
</h1>


<p>
  <%= @event.intro %>
</p>
<p>
  <strong>När:</strong><br/ >
  <%= @event.duration %>
</p>
<p>
  <strong>Beskrivning:</strong> <br />
  <%= simple_format @event.description %>
</p>

<p>
  <strong>Har du frågor? Vill du kontakta arrangören?</strong><br />
  <% if @event.phone_number? %>
    Ring 
    <% if @event.phone_name? %>
      <%= @event.phone_name %> 
    <% end %>
    på telefon: <%= @event.phone_number %>.
    <br />
  <% end %>
  Mejla till <%= @event.email_name %>.<br />
</p>

<p>
  <strong>Adress:</strong><br />
  <%= @event.street %><br /> 
  <%= @event.zip%>&nbsp;&nbsp;<%= @event.city %>
</p>
<p>
  <strong>Vägbeskrivning:</strong><br />
  <%= @event.loc_descr %>
</p>
<!--
<p>
  <strong>Lat:</strong>
  <%= @event.lat %>
</p>
<p>
  <strong>Lng:</strong>
  <%= @event.lng %>
</p>
-->

<% if current_user %>
  <% if current_user.authorized? @event.organizer %>
<p>
  <%= link_to t('app.edit'), edit_event_path(@event) %> |
  <%= link_to t('app.destroy'), @event, :confirm => t('app.are_you_sure') + ' ' +@event.subject + '?', :method => :delete %> |
  <%= link_to t('.list'), events_path %>
</p>
<%end%>
<%end%>

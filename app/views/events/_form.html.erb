<% if params[:organizer_id].blank? %> 
  <% unless @organizers.blank? %>
    <h3><%= t '.which_organizer' %> </h3>
    <ul>
    <% for organizer in @organizers %>
      <li><%= link_to organizer.name, new_event_path(:organizer_id => organizer.id)  %></li>
    <% end %>
    </ul>
  <% else %>
    <h3>
      <%= t '.not_organizer' %>
    </h3>
    <p><%= t '.select' %></p>
    <ul>
      <li><%= link_to t('.apply_for_organizer'), organizers_path %></li>
      <li><%= link_to t('.create_organizer1'), new_organizer_path %> <%= link_to t('.create_organizer2'), organizers_path %></li>
    </ul>
  <% end %>
<% else %>


<%= javascript_include_tag "geocode" %>
<p><%= t('.explain_mandatory') %></p>
<%= semantic_form_for @event, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <%= f.inputs do %>
      <%= f.input :subject %>
      
        <%= f.input   :organizer, 
                      :required => true, 
                      :collection => @organizers, 
                      :include_blank => false,
                      :input_html => { :disabled => true}
                      %>

      <%= f.input   :municipality, 
                    :required => true, 
                    :collection => Municipality.select_municipality,
                    :include_blank => false 
                    %>
      <hr />
      <h3>Vad</h3>
      <%= f.input :intro %>                    
      <%= select_category_tree @event.category_id %>
      <%= f.input :description, :input_html => {:rows => 8, :cols => 48} %>
      <hr />
      <h3>NÃ¤r</h3>
      <%= f.input :start_date %>
      <%= f.input :start_time %>
      <%= f.input :stop_date %>
      <%= f.input :stop_time %>
      <hr />
      <h3>Kontaktuppgifter</h3>
      <%= f.input :email, :as => :email %>
      <%= f.input :human_name %>
      <%= f.input :phone_number %>
      <%= f.input :phone_name %>
      <hr />
      <h3>Bilder i annonsen</h3>
      <%= f.input :image1 %>
      <%= f.input :image2 %>
      <%= f.input :image3 %>
      <hr />
      <h3>Var</h3>
      <%= f.input :street %>
      <div id="map_edit"></div>
      <%= f.input :re_geocoded_street, :input_html => { :disabled => true}%>
      <%= f.input :loc_descr %>

      <%= f.input :lat %>
      <%= f.input :lng %>
      <%= f.input :init_lat, :as => :hidden %>
      <%= f.input :init_lng, :as => :hidden %>
      <%= f.input :init_zoom, :as => :hidden %>
      <div class = "button_container">
        <div class= "button">
          <%= f.buttons %>
        </div>
        <div class= "reset">
        <% if @event.new_record? %> 
          <%=link_to( t('.reset'), 
                      new_event_path, 
                      :confirm => t('.do_you_really_want_to_reset_me')) 
                      %>
        <% else %>
          <%=link_to( t('.cancel'), 
                      event_path, 
                      :confirm => t('.do_you_really_want_to_cancel_me')) 
                      %>
        <% end %>
        </div>
      </div>
  <% end %>
<% end %>
<% end %>

<%= semantic_form_for @event, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <%= f.inputs do %>
      <%= f.input :subject %>
      <%= f.input :intro, :input_html => {:size => 50} %>
      <% if @event.new_record? %> 
        <%= f.input :organizer, :required => true, :collection => current_user.organizers %>
      <% else %>
        <%= f.input :organizer, :required => true, :collection => current_user.organizers, :input_html => { :disabled => true}%>     
      <% end %>
      <%= f.input :municipality, :required => true, :collection => Municipality.find(:all, :order => "name ASC")%>
      <%= select_category_tree @event.category_id %>
      <%= f.input :description, :input_html => {:rows => 8, :cols => 48} %>
      <hr />
      <%= f.input :start_date %>
      <%= f.input :start_time %>
      <%= f.input :stop_date %>
      <%= f.input :stop_time %>
      <hr />
      <%= f.input :email %>
      <%= f.input :email_name %>
      <%= f.input :phone_number %>
      <%= f.input :phone_name %>
      <hr />
      <%= f.input :image1 %>
      <%= f.input :image2 %>
      <%= f.input :image3 %>
      <hr />
      <%= f.input :street %>
      <%= f.input :re_geocoded_street, :input_html => { :disabled => true}%>
      <%= f.input :loc_descr %>

      <%= f.input :lat %>
      <%= f.input :lng %>
      <%= f.input :init_lat, :as => :hidden %>
      <%= f.input :init_lng, :as => :hidden %>
      <%= f.input :init_zoom, :as => :hidden %>

      
      
      <%= f.buttons %> 


    <div id="mapCanvas"></div>
  
    
  <% end %>
<% end %>

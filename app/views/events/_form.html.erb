<%= semantic_form_for @event do |f| %>
  <%= f.error_messages %>
  <%= f.inputs do %>
      <%= f.input :subject %>
      <%= f.input :intro, :input_html => {:size => 50} %>
      <%= f.input :organizer, :required => true, :collection => current_user.organizers.find(:all, :order => "name ASC")%>
      <%= f.input :municipality, :required => true, :collection => Municipality.find(:all, :order => "name ASC")%>
      <%= f.input :description, :input_html => {:rows => 8, :cols => 48} %>
      <%= f.input :start_date %>
      <%= f.input :start_time %>
      <%= f.input :stop_date %>
      <%= f.input :stop_time %>
      <%= f.input :street %>
      <%= f.input :zip %>
      <%= f.input :city %>
      <%= f.input :loc_descr %>
      <%= f.input :lat %>
      <%= f.input :lng %>

  <p><%= f.buttons %></p> 
    
  <% end %>
<% end %>

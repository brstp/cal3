<!DOCTYPE html>
<html>
  <head>
  <meta charset="UTF-8"> 
  <%= display_meta_tags :site => t('app.site_name'), :reverse => true %>
  <%= stylesheet_link_tag 'formtastic' %>
  <%= stylesheet_link_tag 'formtastic_changes' %>
  <%= stylesheet_link_tag 'application_mini' %>

  <%= stylesheet_link_tag "blog_css_reset", :media => :all %>
  <%= stylesheet_link_tag "blog_css_960", :media => :all %>
  <%= stylesheet_link_tag "blog_style" %>

	<!--[if IE 7]>
		<link rel="stylesheet" type="text/css" media="all" href="/public/stylesheets/blog_ie7.css" />
	<![endif]-->

	<!--[if IE 6]>
		<link rel="stylesheet" type="text/css" media="all" href="/public/stylesheets/blog_ie6.css" />
		<script type="text/javascript" src="/public/stylesheets/blog/includes/js/pngfix.js"></script>
		<script type="text/javascript" src="http://info.foreningskalendern.se/wp-content/themes/bloggingstream/includes/js/menu.js"></script>
	<![endif]-->
  
  <%= stylesheet_link_tag "blog_styles_default", :media => :all %>
  <%= stylesheet_link_tag "blog_custom", :media => :all %>
  <%= stylesheet_link_tag 'calendar', :media => :all %>
  <%= stylesheet_link_tag 'wikipedia' %>

  
  <meta name='robots' content='noindex,nofollow' />
  
  <%= javascript_include_tag  %>
  <%= stylesheet_link_tag  "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.4/themes/smoothness/jquery-ui.css" %>
  <%= javascript_include_tag "jquery.js", "jquery-ui.js", "jquery.rails.js", "jquery.ui.datepicker-sv.js", "jquery.googlemaps1.01.js", "application" %>
  <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>

  <%= favicon_link_tag %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
  
</head>

<body class="single single-post custom unknown">

<div id="container" class="container_16">
	<div id="topbar">
		
		<div id="nav" class="grid_11 alpha">
			<ul id="pagenav" class="menu"><li id="menu-item-34" class="menu-item menu-item-type-custom menu-item-34"><a href="/">Startsidan/Alla evenemang</a></li>
<li id="menu-item-37" class="menu-item menu-item-type-custom menu-item-37"><a href="/not-yet-implemented/">Lägg in evenemang</a></li>
<li id="menu-item-35" class="menu-item menu-item-type-custom menu-item-35"><a href="/municipalities">Alla kommuner</a></li>
<li id="menu-item-36" class="menu-item menu-item-type-custom menu-item-36"><a href="/organizers">Alla arrangörer</a></li>
</ul>		</div><!-- /nav -->
    <div id = "user_account_box">
		<% if user_signed_in? %>
      <div id="user_account">
      <%= image_tag avatar_url(current_user), :id => :user_avatar %>
      <%= current_user.email %><br /><%= t 'devise.sessions.not_you' %> <%= link_to I18n.t('devise.sessions.sign_out'), destroy_user_session_path %><br />
      <%= link_to (t 'devise.sessions.change_settings'), edit_user_path(current_user) %>
      </div><!-- /user_account -->
    <% else %>
      <div id="user_form">

      <%= form_for(:user, :as => :post, :url => "/users/sign_in" ) do |f| %>
        <div id = "login_email">
          <%= f.label :email, t('.email') %><br/> 
          <%= f.text_field :email, :size => "20" %><br/> 
          <%= f.check_box :remember_me %> <%= f.label :remember_me, t('.remember_me') %>
        </div>
        <div id = "login_passwd">
          <%= f.label :password, t('.password') %><br />
          <%= f.password_field :password, :size => "8" %>
        </div>
        <div id = "login_login">
          &nbsp;<br />
          <%= f.submit t '.sign_in' %><br />
          <span id = "forgot_password"><%= link_to( t('.forgot_password'), "/users/password/new")%></span>
        </div>        
        <div id = "login_auto">
        </div>
      <% end %>
      
      </div><!-- /user_form -->
    <% end %>
    </div> <!-- /user_account_box -->
	
	</div><!-- /topbar -->
	
	<div id="header">
	
		<div id="logo">
		
			<h1><a href="http://info.foreningskalendern.se" title="Föreningskalendern">Föreningskalendern</a></h1>
			<h2>Allt som händer &#8211; innan det är försent</h2>
			<%= link_to((image_tag 'logotyp.png', :alt => "Föreningskalenderns logotyp", :title => "Föreningskalendern - allt som händer innan det är för sent."), :root, :title => "Föreningskalendern - allt som händer innan det är för sent." ) %>
			
		</div><!-- /logo -->
		
		<div id="header_ad">

		
		<a href="http://www.unicef.se/stod-oss"><img src="http://www.unicef.se/images/468x120/akamp-alla-barn-bla-468-120.jpg" width="468" height="120" alt="advert" /></a>
		
		
		
</div>	
	</div><!-- /header -->

<div id="single_content">
	
		<div id="left_single">
		
						
			<div class="post">

	  
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
            
      <%= yield %>
			
			</div><!-- /post -->
			
						
      		<div id="bottom_ad">
		<a href="http://www.unicef.se/stod-oss"><img src="http://www.unicef.se/images/468x120/akamp-alla-barn-bla-468-120.jpg" width="468" height="120" alt="advert" /></a>
          </div>	<!-- /bottom_ad -->
			
		</div><!-- /left_single -->

				<div id="right">
				
								
					  <div id="user_nav" class="box">
            <p>
              <% if user_signed_in? %>
         
              <% else %>
                <%= link_to I18n.t('devise.sessions.sign_up'), new_user_registration_path %> <%= I18n.t('app.or') %> 
                <%=link_to I18n.t('devise.sessions.sign_in'), new_user_session_path %>
              <% end %>
              </p>
          </div> <!-- user_nav -->
          
          <%= content_for :right_column_facet %>
          
					<div id="calendar-nav" class="box">
          <span class="heading">Snabblänkar:</span>
            <ul>
              <% if current_user %> <li><%= link_to t('.new_organizer'), new_organizer_path %></li>
              <% unless current_user.organizers.empty? and !current_user.is_admin? %>
<li><%= link_to t('.new_event'), new_event_path %></li>
              <% end %>
                <% if current_user.is_admin? %>
                  <li class = "authorized"><%= link_to t('.users'), users_path %></li>
                  <li class = "authorized"><%= link_to t('.categories'), categories_path %></li>
                  <%end%>
                  <li><%= link_to(t('.subscribe_rss'), events_url(:only_path => false, :format => :rss) )  %>  
<%= link_to image_tag("rss_icon.gif", :alt => t('.rss_alt')), events_url(:only_path => false, :format => :rss) %></li>                  
              <%end%>
            </ul>
										
					</div><!-- /post-meta -->
					
								
		
				
				
			<div id="ads" class="box">
			
				<span class="heading">Annons:</span>
				
				<div class="adblock">

									

					<a href="http://www.woothemes.com" title="Stöd vår sponsor"><img src="http://www.woothemes.com/ads/125x125b.jpg" alt="Sponsor" /></a>

									

					<a href="http://www.woothemes.com" title="Stöd vår sponsor"><img src="http://www.woothemes.com/ads/125x125b.jpg" alt="Sponsor" /></a>

										

				</div><!-- /adblock -->
			
			</div><!-- /ads -->

      
      <%= content_for :right_column_facts %>
					
			
			<div class="clear"></div>
					
		</div><!-- /right -->

	</div><!-- /single_content -->
	
	<div class="clear"></div>	

	<div id="footer">
		
		<ul>
			<li class=""><a href="http://info.foreningskalendern.se" title="Föreningskalendern"><span class="left"></span>Om kalendern<span class="right"></span></a></li>
			<li class="page_item page-item-6"><a href="http://info.foreningskalendern.se/kundtjanst-kontakt/" title="Kundtjänst &amp; kontakt">Kundtjänst &#038; kontakt</a></li>
		</ul>
		
		
	</div><!-- /footer -->

</div><!-- /container -->



</body>
</html>

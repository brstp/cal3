.content
  %article{ :class => :article, :role => :main}
    %h1= title  "Godkänn eller avslå ansökan att bli adminstratör för #{@petition.organizer.name}"

    = semantic_form_for @petition do |f|
      = f.error_messages 
      = f.inputs do
        = f.input   :user, :as => :string, :required => true, :input_html => { :disabled => true}
        = f.input   :organizer, :as => :string, :required => true, :input_html => { :disabled => true}
        = f.input   :argumentation, :input_html => { :disabled => true}
        = f.input   :created_at, :as => :string, :required => true, :input_html => {:value => I18n.l(@petition.created_at), :disabled => true } 
        = f.input   :approved, :as => :radio, :required => true
        = f.input   :rejected_reason 
        = f.input   :decision_made_by_user, :as => :string, :required => true, :input_html => { :disabled => true} 
        = f.input   :decision_made_by_user_id, :as => :hidden    
        = f.actions do
          = f.action :submit, :as => :button
          = f.action :cancel, :as => :link, :label => "Avbryt, gå tillbaka"
    %p
      = link_to "Till  arrangörssida", organizer_path(@petition.organizer)
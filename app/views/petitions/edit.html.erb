<h1><%= title t '.title' %></h1>

<%= semantic_form_for @petition do |f| %>
  <%= f.error_messages %>
  <%= f.inputs do %>
    <%= f.input   :user, 
                  :as => :string, 
                  :required => true,
                  :input_html => { :disabled => true} %>
    <%= f.input   :organizer, 
                  :as => :string, 
                  :required => true,
                  :input_html => { :disabled => true} %>
    <%= f.input   :argumentation, 
                  :input_html => { :disabled => true} %>
    <%= f.input   :created_at, 
                  :as => :string,
                  :required => true,
                  :input_html => {:value => I18n.l(@petition.created_at), 
                  :disabled => true } %>
    <%= f.input   :approved,
                  :as => :radio,
                  :required => true %>
    <%= f.input   :rejected_reason %>
    <%= f.input   :decision_made_by_user, 
                  :as => :string,   
                  :required => true, 
                  :input_html => { :disabled => true} %>
    <%= f.input   :decision_made_by_user_id,
                  :as => :hidden %>    
  <% end %>
  <%= f.buttons %>
<% end %>

<%= link_to t('.back_to_organizer') + ' ' + @petition.organizer.name, organizer_path(@petition.organizer) %>

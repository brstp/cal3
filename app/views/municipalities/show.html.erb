<% title @municipality.name %>

<p>
  <strong><%= t 'formtastic.labels.municipality.name' %>: </strong>
  <%= @municipality.name %>
</p>

<p>
  <strong><%= t 'formtastic.labels.municipality.admin_no' %>: </strong>
  <%= @municipality.admin_no %>
</p>

<p>
  <strong><%= t 'formtastic.labels.municipality.parent_admin_no' %>: </strong>
  <%= @municipality.parent_admin_no %>
</p>

<p>
  <strong><%= t 'formtastic.labels.municipality.short_name' %>: </strong>
  <%= @municipality.short_name %>
</p>

<p>
  <strong><%= t '.upcoming' %>:</strong>
</p>
  
<ul>  
  <% for event in @municipality.events %>  
  <li><%= link_to event.subject + ' | ' + event.start_date + ' | ' + event.start_time + ' | ' + event.organizer.name, event %></li>  
  <% end %>  
</ul> 

<p>
  <%= link_to t('app.edit'), edit_municipality_path(@municipality) %> |
  <%= link_to t('app.destroy'), @municipality, :confirm => t('app.are_you_sure') + ' ' +@municipality.name + '?', :method => :delete %> |
  <%= link_to t('municipality.show.list'), municipalities_path %>
</p>

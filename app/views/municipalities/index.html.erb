<% title t('municipalities.index.title') %>

<table>
   <% for municipality in @municipalities %>
    <tr>
      <td><%= link_to municipality.name, municipality %></td>
      <td><%= link_to t('app.edit'), edit_municipality_path(municipality) %></td>
      <td><%= link_to t('app.destroy'), @municipality, :confirm => t('app.are_you_sure') + ' ' + municipality.name + '?', :method => :destroy %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to t('municipality.index.new'), new_municipality_path %></p>
